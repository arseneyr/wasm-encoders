{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "jest.config.ts",
    "rollup.config.ts"
  ],
  "exclude": [
    "src/__tests__/umd*"
  ]
}